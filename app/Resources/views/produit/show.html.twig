{% extends 'base.html.twig' %}

{% block Body %}
    <section class="breadcumb-area bg-img bg-overlay" style="background-image: url({{ asset('img/bg-img/breadcumb3.jpg') }});">

    </section>

    <section class="login-area section-padding-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="login-content">
                        <h1>Produit</h1>

                        <table>
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ produit.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ produit.nom }}</td>
                            </tr>
                            <tr>
                                <th>Prix</th>
                                <td>{{ produit.prix }}</td>
                            </tr>
                            <tr>
                                <th>Quantite</th>
                                <td>{{ produit.quantite }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ produit.description }}</td>
                            </tr>
                            <tr>
                                <th>Categorie</th>
                                <td>{{ produit.categorie }}</td>
                            </tr>
                            <tr>
                                <th>Nbvente</th>
                                <td>{{ produit.nbVente }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <ul>
                            <li>
                                <a href="{{ path('produit_index') }}">Back to the list</a>
                            </li>
                            <li>
                                <a href="{{ path('produit_edit', { 'id': produit.id }) }}">Edit</a>
                            </li>
                            <li>
                                {{ form_start(delete_form) }}
                                <input type="submit" value="Delete">
                                {{ form_end(delete_form) }}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
