{% extends 'base.html.twig' %}

{% block Body %}
    <section class="breadcumb-area bg-img bg-overlay" style="background-image: url({{ asset('img/bg-img/breadcumb3.jpg') }});">

    </section>

    <section class="login-area section-padding-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="login-content">
                        <h1>Produits list</h1>

                        <table>
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Quantite</th>
                                <th>Description</th>
                                <th>Categorie</th>
                                <th>Nbvente</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for produit in produits %}
                                <tr>
                                    <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                                    <td>{{ produit.nom }}</td>
                                    <td>{{ produit.prix }}</td>
                                    <td>{{ produit.quantite }}</td>
                                    <td>{{ produit.description }}</td>
                                    <td>{{ produit.categorie }}</td>
                                    <td>{{ produit.nbVente }}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('produit_show', { 'id': produit.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('produit_edit', { 'id': produit.id }) }}">edit</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <ul>
                            <li>
                                <a href="{{ path('produit_new') }}">Create a new produit</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
