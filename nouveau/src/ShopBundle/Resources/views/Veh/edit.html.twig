{% extends 'admin.html.twig' %}

{% block username %} ADMIN {% endblock %}
{% block strong %}Veh {%  endblock %}

    {% block h2 %} Information{% endblock %}

    {% block path %} {{ path('veh_index') }} {% endblock %}

{% block body %}

    <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="block-header">
                        </div>
                        <div class="body">

                            {{ form_start(form) }}



                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="email_address_2">Vehicule</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8">
                                    <div class="form-group">
                                         {{ form_widget(form.ad,{'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                {% if((form_errors(form.ad)==true)) %}
                                <div class="alert alert-primary" role="alert">
                                    The logo is mandatory!
                                </div>
                                {% endif %}
                                </div>
                            </div>

                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="email_address_2">Debut contrat</label>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i> </span>
                                        {{ form_widget(form.debutcontrat,{'attr': {'class': 'form-control date','placeholder':'Ex: 2016-01-30'}}) }}

                                    </div>
                                </div>
                                {% if((form_errors(form.debutcontrat)==true)) %}
                                <div class="alert alert-primary" role="alert">
                                    Missing info!
                                </div>  {% endif %}
                                </div>

                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="email_address_2">Fin contrat</label>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i> </span>
                                        {{ form_widget(form.fincontrat,{'attr': {'class': 'form-control date','placeholder':'Ex: 2016-01-30'}}) }}

                                    </div>
                                </div>
                                {% if((form_errors(form.fincontrat)==true)) %}
                                <div class="alert alert-primary" role="alert">
                                    Missing info!
                                </div>  {% endif %}
                                </div>

                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="password_2">Serie</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8">
                                    <div class="form-group">
                                         {{ form_widget(form.serie,{'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                {% if((form_errors(form.serie)==true)) %}
                                <div class="alert alert-primary" role="alert">
                                    Type your new serie!
                                </div>  {% endif %}
                                </div>

                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="password_2">Soc</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8">

                                       {{ form_widget(form.ids) }}

                                </div>
                            </div>
                            <div class="row clearfix">

                                <div class="col-sm-8 offset-sm-2">
                                    <input type="submit" class="btn btn-raised btn-primary btn-round waves-effect" value="Save">
                                </div>



                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>



{% endblock %}
